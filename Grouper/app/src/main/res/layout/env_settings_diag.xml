<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/txt_EnvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Environment Password"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_joinwquiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take a quiz and join" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete environment" />

    <Button
        android:id="@+id/btn_forceSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoke Group Sort" />
</LinearLayout>
